<%= simple_form_for [@cliente, @clientesmkt], :html => {:class =>'form-inline'} do |f| %>
  <div class=container>
  <div class="form-inputs">
        <div class="row-fluid">

  <%= f.error_notification %>
  <div class="form-inputs span6">
    <%= f.input :cmk_targetaddr, :label => 'Target Address' %>

    <%= f.input :cmk_minlimit, :label => 'Min Limit',  
        :collection => {
                              'Unlimited' => '0',
                              '64K' =>'64K' ,
                              '128K' => '128K',
                              '256K' => '256K',
                              '512K' => '512K',
                              '1M' => '1M',
                              '2M' => '2M',
                              '3M' => '3M'
                  }
    %>
    <%= f.input :cmk_maxlimit, :label => 'Max Limit', 
      :collection => {
                              'Unlimited' => '0',
                              '64K' => '64K',
                              '128K' => '128K',
                              '256K' => '256K',
                              '512K' => '512K',
                              '1M' => '1M',
                              '2M' => '2M',
                              '3M' => '3M'
                  }
                    %>
    <%= f.input  :cmk_priority, :label =>'Priority'%>
    <%= f.hidden_field :cmk_interface, :label => 'Interface' %>
    <%= f.hidden_field :cmk_parent, :label => 'Parent' %>
    <%= f.hidden_field :cmk_limitat, :label =>'Limit At' %>
  
  </div>
  <div class=span6>
    <%= f.hidden_field :cmk_burstlimit, :label => 'Burst Limit', 
      :collection => {
                              'Unlimited' => '0',
                              '64K' => '64K',
                              '128K' => '128K',
                              '256K' => '256K',
                              '512K' => '512K',
                              '1M' => '1M',
                              '2M' => '2M',
                              '3M' => '3M'
                  }
  %>
 <%= f.hidden_field :cmk_minburstlimit, :label => 'Burst Threshold',
      :collection => {
                              'Unlimited' => '0',
                              '64K' => '64K',
                              '128K' => '128K',
                              '256K' => '256K',
                              '512K' => '512K',
                              '1M' => '1M',
                              '2M' => '2M',
                              '3M' => '3M'
                  }
%>
 <%= f.hidden_field :cmk_burstthreshold, :label => 'Burst Threshold',
      :collection => {
                              'Unlimited' => '0',
                              '64K' => '64K',
                              '128K' => '128K',
                              '256K' => '256K',
                              '512K' => '512K',
                              '1M' => '1M',
                              '2M' => '2M',
                              '3M' => '3M'
                  }
                %>
  <%= f.hidden_field :cmk_minbursttheshold, :label => 'Burst Threshold',
      :collection => {
                              'Unlimited' => '0',
                              '64K' => '64K',
                              '128K' => '128K',
                              '256K' => '256K',
                              '512K' => '512K',
                              '1M' => '1M',
                              '2M' => '2M',
                              '3M' => '3M'
                  }
%>

    <%= f.hidden_field :cmk_burttime, :label => 'Burst Time' %>
  </div>
  <div class="form-actions span12" >
    <%= f.button :submit, :class =>'btn btn-primary' %>
  </div>

  </div>
  </div>
</div>

<% end %>
