<%= simple_form_for(@make) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :mc_name, :label =>'Nombre' %>
    <%= f.input :mc_observation, :label =>'Observaciones', :input_html =>{:rows =>'5'} %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Guardar', :class =>'btn btn-primary' %>
  </div>

<% end %>
