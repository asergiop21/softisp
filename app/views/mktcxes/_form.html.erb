  <%= simple_form_for [@mktcx]   do |f| %>
      <div class=container>
          <%= f.error_notification %>
            <div class=span10>
              <%= f.input :mkcusuario, :label =>'Usuario',  :wrapper_html => { :class => 'span6'} %>
              <%= f.input :mkcip, :label =>'Ip',  :wrapper_html => { :class => 'span6'} %>
              <%= f.label :Password %>
              <%= f.password_field :password,  :wrapper_html => { :class => 'span6'} %>
              <%= f.label "Confirmacion Password" %>
              <%= f.password_field :password_confirmation, :label =>'Password',  :wrapper_html => { :class => 'span6'} %>

            </div>
         </div> 
      
         <div class="form-actions">
    <%= f.submit 'Guardar', :class =>'btn btn-primary' %>
  </div>
<% end %>
