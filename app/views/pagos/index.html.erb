<h1>Pagos de <%= @cliente.cl_apellido.capitalize + " " + @cliente.cl_nombre.capitalize %></h1>

<table class="table">
  <tr>
    <th>Fecha</th>
    <th>Detalle</th>
    <th>Debe</th>
    <th>Haber</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pagos.each do |pago| %>
  <tr>
  
    <td><%= pago.pg_fecha %></td>
    <td><%= pago.pg_detalle %></td>
    <td><%= pago.pg_debe %></td>
    <td><%= pago.pg_haber %></td>
    <td></td>
    <td><%= link_to "Editar", edit_cliente_pago_path(@cliente, pago.id) %></td>
    <td></td>
  </tr>
<% end %>
<tr>
  <th></th>
  <th>Totales</th>
  <th>$ <%= @imp_debe %></th>
  <th>$ <%= @imp_haber  %></th>
  <th>$ <%= @total %></th>

</tr>
</table>

<%= link_to 'Agregar Movimientos', new_cliente_pago_path(@cliente) %>
