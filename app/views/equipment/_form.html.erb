<%= simple_form_for(@equipment) do |f| %>
  <%= f.error_notification %>
  <div class=container>
  <div class="form-inputs">
        <div class="row-fluid">

  <div class="span6">
    <%= f.input :eq_mac, :label => 'Mac', :input_html => {:maxlength => '12'} %>
    <%= f.input :eq_state, :label => 'Estado',  
        :collection => {
                              'Stock' => '1',
                              'Baja' =>'2' ,
                              'Instalado' => '3',
                              'A Retirar' => '4',
                              'En Reparación' => '6',
                  }#El estado 5 es asignado,
    %>
    <%= f.input :eq_observation, :label=> 'Observación', :input_html =>{:rows => '5'} %>
  </div>
<div class="span6">
  <%= f.input :model_id, :label=>'Modelo' do %>
      <%= f.select :model_id,  Model.all.map {|l|[l.md_name, l.id]}, prompt: "Seleccione un modelo" %>
  <% end  %>

<%= f.input :eq_node, :label => 'Opcion',  
        :collection => {
                              'Hogar' => '1',
                              'Nodo' =>'2' ,
                  }
    %>
  <%= f.input :supplier_id, :label =>'Proveedor' do %>
      <%= f.select :supplier_id,  Supplier.all.map {|p|[p.pv_name, p.id]}, prompt: "Seleccione un Proveedor" %>
  <% end  %>

  </div>
  </div>
  </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Guardar', :class =>'btn btn-primary' %>
  </div>
<% end %>
