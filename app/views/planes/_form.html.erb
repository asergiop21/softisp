<%= simple_form_for [@plane] , :html=> {:class=>'form-inline'}  do |f| %>
      <div class=container>
        <div class="row-fluid">
          <%= f.error_notification %>
            <div class=span6 >
              
              <%= f.input :pl_nombre, :label =>'Nombre del Plan'   %>
              <%= f.input :pl_vel, :label =>'Velocidad subida' %>
              <%= f.input :pl_velbajada, :label =>'Velocidad bajada' %>
              <%= f.input :pl_importe,:label=> 'importe', :as=>:string,  :required=> true,  :input_html => { :class => 'input-mini' }%>
              <%= f.input :pl_recar1,:label=> 'Recargos 1', :as=>:string,  :required=> true,  :input_html => { :class => 'input-mini' }%>
              <%= f.input :pl_recar2,:label=> 'Recargos 2', :as=>:string,  :required=> true,  :input_html => { :class => 'input-mini' }%>
              
              <%= f.input :pl_elim, :label =>'Eliminado' %>
            </div>
          </div> 
         </div> 

<div class="form-actions">
    <%= f.submit 'Guardar', :class =>'btn btn-primary' %>
  </div>                                                  
                                                                                                                                                                              <% end %>

